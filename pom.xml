            <link>http://dcl.mathcs.emory.edu/util/backport-util-concurrent/doc/api/</link>
            <link>http://aopalliance.sourceforge.net/doc</link>
            <link>http://tomcat.apache.org/tomcat-5.5-doc/servletapi/</link>
          </links>
        </configuration>
