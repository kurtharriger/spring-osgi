        <artifactId>maven-javadoc-plugin</artifactId>
        <configuration>
          <aggregate>true</aggregate>
          <groups>
            <group>
              <title>Spring OSGi Core</title>
              <packages>org.springframework.osgi*</packages>
            </group>
            <group>
              <title>Spring OSGi Extender</title>
