            <group>
               <title>Samples</title>
               <packages>org.springframework.osgi.sample*</packages>
            </group>
          </groups>
          <excludePackageNames>org.springframework.osgi.test.io*:org.springframework.osgi.test.bundleScope:org.springframework.osgi.test.card*:org.springframework.osgi.test.dep*:org.springframework.osgi.test.lifecy*:org.springframework.osgi.test.maven*:org.springframework.osgi.test.property*:org.springframework.osgi.test.reference*:org.springframework.osgi.test.service*:org.springframework.osgi.test.trivial*:org.springframework.osgi.test.simple:org.springframework.osgi.test.scope*</excludePackageNames>
