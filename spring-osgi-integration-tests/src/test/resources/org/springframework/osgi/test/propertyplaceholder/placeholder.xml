<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	
	<bean id="placeholder" class="org.springframework.osgi.context.support.OsgiPropertyPlaceholder">
		<property name="persistentId" value="PropertyPlaceholderTest-123"/>
		<property name="properties">
			<props>
				<prop key="white">donkey</prop>
				<prop key="hidden">treasures</prop>
			</props>
		</property>
	</bean>

	<bean id="bean1" class="java.lang.String">
		<constructor-arg value="${white}" />
	</bean>

	<bean id="bean2" class="java.lang.String">
		<constructor-arg value="${hidden}" />
	</bean>

</beans>