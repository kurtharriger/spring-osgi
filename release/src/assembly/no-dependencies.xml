<assembly>
	<id>no-dependencies</id>
	<formats>
		<format>zip</format>
	</formats>
	<componentDescriptors>
		<componentDescriptor>src/assembly/docs.xml</componentDescriptor>
	</componentDescriptors>
	<includeBaseDirectory>true</includeBaseDirectory>
	<moduleSets>
		<moduleSet>
			<includes>
				<include>
					org.springframework.osgi:spring-osgi-mock
				</include>
				<include>
					org.springframework.osgi:spring-osgi-io
				</include>
				<include>
					org.springframework.osgi:spring-osgi-core
				</include>
				<include>
					org.springframework.osgi:spring-osgi-extender
				</include>
				<include>
					org.springframework.osgi:spring-osgi-test
				</include>
				<include>
					org.springframework.osgi:spring-osgi-annotation
				</include>
			</includes>
			<sources>
				<includeModuleDirectory>false</includeModuleDirectory>
				<fileSets>
					<fileSet>
						<directory>target</directory>
						<outputDirectory>dist</outputDirectory>
						<includes>
							<include>*.jar</include>
						</includes>
					</fileSet>
				</fileSets>
			</sources>
		</moduleSet>
		<moduleSet>
			<includes>
				<include>
					org.springframework.osgi.samples:samples
				</include>
			</includes>
			<sources>
				<outputDirectoryMapping>
					samples/${artifactId}
				</outputDirectoryMapping>
				<fileSets>
					<fileSet>
						<includes>
							<include>pom.xml</include>
						</includes>
						<excludes>
							<exclude>bin/**</exclude>
							<exclude>target/**</exclude>
							<exclude>**/clover.license</exclude>
							<!--
							<exclude>*.xml</exclude>
							-->
						</excludes>
					</fileSet>
				</fileSets>
			</sources>
		</moduleSet>
	</moduleSets>
</assembly>
