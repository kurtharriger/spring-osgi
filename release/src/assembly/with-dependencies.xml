<!-- identical to wo-dependencies except the extra dependencies component -->
<assembly>
	<id>with-dependencies</id>
	<formats>
		<format>zip</format>
	</formats>
	<componentDescriptors>
		<componentDescriptor>src/assembly/docs.xml</componentDescriptor>
		<componentDescriptor>src/assembly/dependencies.xml</componentDescriptor>
	</componentDescriptors>
	<includeBaseDirectory>true</includeBaseDirectory>
	<moduleSets>
		<!-- mandatory jars -->
		<moduleSet>
			<includes>
				<include>org.springframework.osgi:spring-osgi-io</include>
				<include>org.springframework.osgi:spring-osgi-mock</include>
				<include>org.springframework.osgi:spring-osgi-core</include>
				<include>org.springframework.osgi:spring-osgi-extender</include>											
				<include>org.springframework.osgi:spring-osgi-test</include>
				<include>org.springframework.osgi:spring-osgi-web</include>
				<include>org.springframework.osgi:spring-osgi-web-extender</include>
			</includes>
			<!-- the .jar and -sources.jar will be included here -->
			<sources>
				<includeModuleDirectory>false</includeModuleDirectory>				
				<fileSets>
					<fileSet>
						<directory>target</directory>
						<outputDirectory>dist</outputDirectory>
						<includes>
							<include>*.jar</include>
						</includes>
					</fileSet>
				</fileSets>
			</sources>
		</moduleSet>
		<!-- extensions -->
		<moduleSet>
			<includes>
				<include>org.springframework.osgi:spring-osgi-annotation</include>
			</includes>
			<!-- the .jar and -sources.jar will be included here -->
			<sources>
				<includeModuleDirectory>false</includeModuleDirectory>				
				<fileSets>
					<fileSet>
						<directory>target</directory>
						<outputDirectory>dist/extensions</outputDirectory>
						<includes>
							<include>*.jar</include>
						</includes>
					</fileSet>
				</fileSets>
			</sources>
		</moduleSet>
	</moduleSets>
</assembly>
