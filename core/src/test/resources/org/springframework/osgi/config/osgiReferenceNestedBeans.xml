<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:osgi="http://www.springframework.org/schema/osgi"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
		http://www.springframework.org/schema/osgi http://www.springframework.org/schema/osgi/spring-osgi.xsd"
	osgi:default-timeout="10" osgi:default-cardinality="0..X">
	
	<bean id="nestedNamedReference" class="org.springframework.osgi.config.NestedReferencesTest$Holder">
		<property name="data">
			<osgi:reference interface="java.awt.Shape" id="satriani"/>
		</property>
	</bean>
	
	<bean id="nestedAnonymousReference" class="org.springframework.osgi.config.NestedReferencesTest$Holder">
		<property name="data">
			<osgi:reference interface="java.awt.Shape"/>
		</property>
	</bean>
	
	<bean id="nestedNamedCollection" class="org.springframework.osgi.config.NestedReferencesTest$Holder">
		<property name="data">
			<osgi:list interface="java.awt.Shape" id="dire-straits"/>
		</property>
	</bean>
	
	<bean id="nestedAnonymousCollection" class="org.springframework.osgi.config.NestedReferencesTest$Holder">
		<property name="data">
			<osgi:set interface="java.awt.Shape"/>
		</property>
	</bean>
	
	<osgi:reference id="topLevelBean" interface="java.awt.Shape"/>
</beans>	