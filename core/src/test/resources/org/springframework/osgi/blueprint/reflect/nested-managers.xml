<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

    <!-- this is lazily initialized, but since the reference depends on it, it should still get created -->
    <bean id="dependsleaf1" class="org.springframework.osgi.blueprint.TestComponent" init-method="init" activation="lazy"/>

    <bean id="dependsleaf2" class="org.springframework.osgi.blueprint.TestComponent" init-method="init" activation="lazy"/>

	<!--  3 metadatas -->
    <bean id="first-level" class="org.springframework.osgi.blueprint.TestComponent">
    	<property name="propA">
    		<service ref="dependsleaf1" auto-export="all-classes"/>
    	</property>
    	<property name="propB">
    		<service ref="dependsleaf1" auto-export="all-classes"/>
    	</property>
    </bean>

	<!-- 4 metadatas -->
    <bean id="deeply-nested" class="org.springframework.osgi.blueprint.TestComponent">
    	<property name="propA">
    		<bean class="org.springframework.osgi.blueprint.TestComponent">
    			<property name="propA">
    				<bean class="org.springframework.osgi.blueprint.TestComponent">
    					<property name="propB">
    						<bean class="org.springframework.osgi.blueprint.TestComponent"/>
    					</property>
    				</bean>
    			</property>
    		</bean>
    	</property>
    </bean>

	<!-- 4 metadatas -->
    <bean id="nested-collection" class="org.springframework.osgi.blueprint.TestComponent">
    	<property name="propA">
    		<list>
    			<service ref="dependsleaf1" auto-export="all-classes"/>
    			<bean class="org.springframework.osgi.blueprint.TestComponent"/>
    			<reference-list interface="java.awt.Shape" availability="optional"/>
    		</list>
    	</property>
    </bean>
    
    <!-- 5 metadatas -->
    <bean id="nested-beans" class="org.springframework.osgi.blueprint.TestComponent">
    	<property name="propA">
    		<array>
    			<bean class="org.springframework.osgi.blueprint.TestComponent"/>
    			<bean class="org.springframework.osgi.blueprint.TestComponent"/>
    			<bean class="org.springframework.osgi.blueprint.TestComponent">
    				<property name="propA">
    					<bean class="org.springframework.osgi.blueprint.TestComponent"/>
    				</property>
    			</bean>
    		</array>
    	</property>
    </bean>
    
    <!-- 3 metadatas -->
    <bean id="nested-references" class="org.springframework.osgi.blueprint.TestComponent">
    	<property name="propA">
    		<list>
    			<reference-list interface="java.awt.Shape" availability="optional"/>
	   			<reference interface="java.awt.Shape" availability="optional"/>
    		</list>
    	</property>
    </bean>
    
    <!-- 1 -->
    <reference interface="java.awt.Shape" availability="optional"/>
</blueprint>