<?xml version="1.0" encoding="UTF-8"?>
<project>
  <parent>
    <artifactId>spring-osgi</artifactId>
    <groupId>org.springframework.osgi</groupId>
    <version>1.2.0-rc1-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.springframework.osgi.iandt</groupId>
  <artifactId>spring-osgi-integration-tests-module</artifactId>
  <packaging>pom</packaging>
  <name>Spring OSGi Integration Tests Module</name>
  <url>http://www.springframework.org/osgi</url>
  
  <properties>
	<clover.skip>true</clover.skip>
	<bundlor.enabled>true</bundlor.enabled>
  </properties>
  
  <modules>
    <module>bundles</module>
    <module>tests</module>
  </modules>
  
  <build>
	  <plugins>
		  <plugin>
			<artifactId>maven-deploy-plugin</artifactId>
			<configuration>
			  <skip>true</skip>
			</configuration>
		  </plugin>
	  </plugins>
  </build>
  
  <profiles>
    <profile>
      <id>jdk-1.5+</id>
        <activation>
          <jdk>!1.4</jdk>
        </activation>
        <modules>
          <module>tests-tiger</module>
        </modules>
    </profile>
  </profiles>

</project>
