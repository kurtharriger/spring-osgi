<?xml version="1.0"?>
<project>
	<parent>
		<artifactId>spring-modules</artifactId>
		<groupId>org.springframework.osgi</groupId>
		<version>2.0.5-osgi-m3-SNAPSHOT</version>
	</parent>
	<modelVersion>4.0.0</modelVersion>

	<groupId>org.springframework.osgi</groupId>
	<artifactId>spring-hibernate3</artifactId>
	<packaging>bundle</packaging>
	<name>Spring Hibernate (v3) module (OSGi version)</name>
	<version>${project.parent.version}</version>
	<url>http://www.springframework.org</url>

    <properties>
	   <!-- optional imports-->
	   <spring.osgi.import.pkg>
	      javax.servlet*;resolution:=optional,
		  javax.transaction;resolution:=optional,
		  org.aopalliance*;resolution:=optional
	   </spring.osgi.import.pkg>
	</properties>
	
  <dependencies>
    <!-- specified since 3.2.3 is not published into maven -->	
    <dependency>
      <groupId>org.hibernate</groupId>
      <artifactId>hibernate</artifactId>
      <version>3.2.2.ga</version>
      <scope>provided</scope>
    </dependency>
   </dependencies>
</project>