<?xml version="1.0"?>
<project>
	<parent>
		<artifactId>spring-modules</artifactId>
		<groupId>org.springframework.osgi</groupId>
		<version>2.0.5-osgi-m2</version>
	</parent>
	<modelVersion>4.0.0</modelVersion>

	<groupId>org.springframework.osgi</groupId>
	<artifactId>spring-context</artifactId>
	<packaging>bundle</packaging>
	<name>Spring context module (OSGi version)</name>
	<version>${project.parent.version}</version>
	<url>http://www.springframework.org</url>

    <properties>
       <!-- bug related to empty packages -->
       <!-- optional imports-->
	   <spring.osgi.import.pkg>
   org.springframework.instrument;resolution:=optional,
   org.aopalliance*;resolution:=optional,
   commonj.timers*;resolution:=optional,
   commonj.work*;resolution:=optional,
   org.apache.catalina.loader*;resolution:=optional,
   org.aspectj.weaver.loadtime*;resolution:=optional,
   com.sun.enterprise.loader*;resolution:=optional,
   edu.emory.mathcs.backport.java.util.concurrent*;resolution:=optional,
   javax.naming;resolution:=optional,
   javax.persistence.spi;resolution:=optional,
   org.springframework.aop*;resolution:=optional;version="${spring.import.version}",
   org.xml.sax;resolution:=optional
          </spring.osgi.import.pkg>
    </properties>
    
</project>