<?xml version="1.0"?>
<project>
	<parent>
		<artifactId>spring-modules</artifactId>
		<groupId>org.springframework.osgi</groupId>
		<version>2.0.5-osgi-m2</version>
	</parent>
	<modelVersion>4.0.0</modelVersion>

	<groupId>org.springframework.osgi</groupId>
	<artifactId>spring-toplink</artifactId>
	<packaging>bundle</packaging>
	<name>Spring Toplink module (OSGi version)</name>
	<version>${project.parent.version}</version>
	<url>http://www.springframework.org</url>
	
	<properties>
	   <!-- optional imports-->
	   <spring.osgi.import.pkg>
   org.aopalliance*;resolution:=optional,
   *
   		</spring.osgi.import.pkg>
	</properties>
	
	
	  <!-- template dependencies for Spring jars to avoid duplication -->
  <dependencies>
    <dependency>
      <groupId>org.springframework</groupId>
      <artifactId>${pom.artifactId}</artifactId>
      <version>${spring.version}</version>
      <scope>provided</scope>

	<exclusions>
        <exclusion>
	  <groupId>com.oracle.toplink</groupId>
      <artifactId>toplink</artifactId>
        </exclusion>
      </exclusions>
             
    </dependency>
  </dependencies>
	
</project>