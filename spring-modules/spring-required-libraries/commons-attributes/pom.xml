<?xml version="1.0"?>
<project>
  <parent>
    <artifactId>spring-framework-required-libraries</artifactId>
    <groupId>org.springframework.osgi</groupId>
    <version>1.0-rc1-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>

  <groupId>org.springframework.osgi</groupId>
  <artifactId>commons-attributes.osgi</artifactId>
  <packaging>bundle</packaging>
  <name>Jakarta Commons Attributes (OSGi version)</name>
  <version>2.2-SNAPSHOT</version>
  <url>http://www.springframework.org/osgi</url>

  <properties>
    <unpack.version>2.2</unpack.version>
    <spring.osgi.export.pkg>org.apache.commons.attributes*</spring.osgi.export.pkg>
    <spring.osgi.import.pkg>
    org.apache.tools.ant*;resolution:=optional,
    com.sun*;resolution:=optional,
    com.thoughtworks.qdox*;resolution:=optional,
    *
    </spring.osgi.import.pkg>
  </properties>
  
  <dependencies>
    <dependency>
      <groupId>commons-attributes</groupId>
      <artifactId>commons-attributes-api</artifactId>
      <version>2.2</version>
      <scope>provided</scope>      
    </dependency>
    <dependency>
      <groupId>commons-attributes</groupId>
      <artifactId>commons-attributes-compiler</artifactId>
      <version>2.2</version>      
      <scope>provided</scope>
    </dependency>
  </dependencies>
</project>