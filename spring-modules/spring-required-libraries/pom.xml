<?xml version="1.0" encoding="UTF-8"?>
<project>
  <parent>
    <artifactId>spring-osgi</artifactId>
    <groupId>org.springframework.osgi</groupId>
    <version>1.0-m2-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.springframework.osgi</groupId>
  <artifactId>spring-framework-required-libraries</artifactId>
  <packaging>pom</packaging>
  <name>Spring Framework dependencies packaged as OSGi bundles</name>
  <url>http://www.springframework.org/osgi</url>
  
  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>dependency-maven-plugin</artifactId>
        <executions>
          <execution>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <modules>
    <module>aop-alliance</module>
    <module>asm</module>
    <module>aspectj</module>
    <module>backport-util-concurrent</module>
    <module>c3p0</module>
    <module>cglib</module>
    <module>commons-attributes</module>
    <module>commons-beanutils.osgi</module>
    <module>commons-collections</module>
    <module>commons-lang</module>
    <!--
    <module>commons-logging</module>
    -->
    <module>commons-pool</module>
    <module>hsqldb</module>
    <module>jsp-api.osgi</module>
    <module>jstl.osgi</module>
    <module>junit</module>
    <module>log4j</module>
    <module>mx4j</module>
    <module>mysql-connector</module>
    <module>portlet-api.osgi</module>
    <module>servlet-api.osgi</module>
    <module>spring-osgi-required-bundle-archetype</module>
    <module>struts.osgi</module>
  </modules>
  <reporting>
   <excludeDefaults>true</excludeDefaults>
   <!-- the above doesn't work, so we spell it out in full below -->
   <plugins>
     <plugin>
       <groupId>org.apache.maven.plugins</groupId>
       <artifactId>maven-project-info-reports-plugin</artifactId>
       <inherited>true</inherited>
       <reportSets>
        <reportSet/>
       </reportSets>
     </plugin>   
   </plugins>
  </reporting>
</project>