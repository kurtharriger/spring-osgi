<?xml version="1.0"?>
<project>
  <parent>
    <artifactId>spring-framework-required-libraries</artifactId>
    <groupId>org.springframework.osgi</groupId>
    <version>1.0-m3-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>

  <groupId>org.springframework.osgi</groupId>
  <artifactId>cglib-nodep.osgi</artifactId>
  <packaging>bundle</packaging>
  <name>cglib (OSGi version)</name>
  <version>2.1.3-SNAPSHOT</version>
  <url>http:// www.springframework.org</url>

  <properties>
    <unpack.version>2.1.3</unpack.version>
    
    <spring.osgi.export.pkg>!net.sf.cglib.asm*, net.sf.cglib*</spring.osgi.export.pkg>
    <spring.osgi.import.pkg>
    net.sf.cglib.asm.util;resolution:=optional,
    org.apache.tools.ant*;resolution:=optional,
    org.codehaus.aspectwerkz.hook;resolution:=optional,
    *
    </spring.osgi.import.pkg>
    <spring.osgi.private.pkg>net.sf.cglib.asm*</spring.osgi.private.pkg>
  </properties>
  
  <dependencies>

    <dependency>
      <groupId>cglib</groupId>
      <artifactId>cglib-nodep</artifactId>
      <version>2.1_3</version>
      <scope>provided</scope>
    </dependency>

  </dependencies>
