<?xml version="1.0"?>
<project>
  <parent>
    <artifactId>spring-framework-required-libraries</artifactId>
    <groupId>org.springframework.osgi</groupId>
    <version>1.0-m2-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>

  <groupId>org.springframework.osgi</groupId>
  <artifactId>commons-logging.osgi</artifactId>
  	<packaging>bundle</packaging>
  <name>Jakarta Commons Logging (OSGi version)</name>
  <version>1.1-SNAPSHOT</version>
  <url>http:// www.springframework.org</url>

  <properties>
    <unpack.version>1.1</unpack.version>
    <spring.osgi.export.pkg>org.apache.commons.logging.*</spring.osgi.export.pkg>
    <spring.osgi.import.pkg>
     javax.servlet;resolution:=optional,
     org.apache.avalon.framework.logger;resolution:=optional,
     !org.apache.log4j;resolution:=optional,
     !org.slf4j*,
     *
    </spring.osgi.import.pkg>

  </properties> 
    
  <dependencies>
    <dependency>
      <groupId>commons-logging</groupId>
      <artifactId>commons-logging</artifactId>
      <version>1.1</version>
      <scope>provided</scope>
    </dependency>
  </dependencies>
</project>