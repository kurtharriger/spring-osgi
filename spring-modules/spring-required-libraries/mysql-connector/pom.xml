<?xml version="1.0"?>
<project>
  <parent>
    <artifactId>spring-framework-required-libraries</artifactId>
    <groupId>org.springframework.osgi</groupId>
    <version>1.0-m3</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>

  <groupId>org.springframework.osgi</groupId>
  <artifactId>mysql-connector-java.osgi</artifactId>
  	<packaging>bundle</packaging>
  <name>mysql-connector-java (OSGi version)</name>
  <version>3.1.14</version>
  <url>http:// www.springframework.org</url>

  <!-- defaults point to Spring framework -->
  <properties>
    <unpack.version>3.1.14</unpack.version>
    
    <spring.osgi.export.pkg>com.mysql*, org.gjt*</spring.osgi.export.pkg>
    <spring.osgi.import.pkg>
    com.mchange*;resolution:=optional,
    org.apache.log4j;resolution:=optional,
    org.jboss*;resolution:=optional,
    javax.naming*;resolution:=optional,
    javax.net*;resolution:=optional,
    *
    </spring.osgi.import.pkg>
    
  </properties>
    
  <dependencies>
    <dependency>
      <groupId>mysql</groupId>
      <artifactId>mysql-connector-java</artifactId>
      <version>3.1.14</version>
      <scope>provided</scope>
    </dependency>
  </dependencies>
</project>