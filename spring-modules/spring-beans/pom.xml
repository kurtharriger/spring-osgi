<?xml version="1.0"?>
<project>
	<parent>
		<artifactId>spring-modules</artifactId>
		<groupId>org.springframework.osgi</groupId>
		<version>2.1-SNAPSHOT</version>
	</parent>
	<modelVersion>4.0.0</modelVersion>

	<groupId>org.springframework.osgi</groupId>
	<artifactId>spring-beans</artifactId>
	<packaging>osgi-bundle</packaging>
	<name>Spring beans module (OSGi version)</name>
	<version>2.1-SNAPSHOT</version>
	<url>http://www.springframework.org</url>

	<build>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>dependency-maven-plugin</artifactId>
				<executions>
					<execution>
						<id>unpack</id>
						<!-- Because we are overwriting the spring.handlers/schemas resources, the
										 unpacking has to occur before the resources are copied from the local
										 build -->
						<phase>generate-resources</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>org.springframework</groupId>
									<artifactId>${project.artifactId}</artifactId>
									<version>${base.spring.version}</version>
									<type>jar</type>
								</artifactItem>
							</artifactItems>
							<outputDirectory>
								${project.build.directory}/classes
							</outputDirectory>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

</project>