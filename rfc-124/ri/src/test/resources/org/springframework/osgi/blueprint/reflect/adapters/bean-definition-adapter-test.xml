<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

  <!-- 
       Configuration file that exercises all of the elements of the
       Spring beans schema that should be adapted into the Blueprint Service
       ComponentDefinition reflection world 
   -->
  
  <!-- variations on construction -->
  
  <bean id="simpleBean1" class="org.springframework.osgi.blueprint.reflect.adapters.TestBean"/>
  
  <bean id="simpleBean2" class="org.springframework.osgi.blueprint.reflect.adapters.TestBean">
    <constructor-arg value="Hello"/>
  </bean>
  
  <bean id="simpleBean3" class="org.springframework.osgi.blueprint.reflect.adapters.TestBean">
    <constructor-arg value="Hello"/>
    <constructor-arg ref="simpleBean2"/>
  </bean>
  
  <bean id="simpleBean4" class="org.springframework.osgi.blueprint.reflect.adapters.TestBean" factory-method="makeBean"/>
    
  <bean id="simpleBean5" class="org.springframework.osgi.blueprint.reflect.adapters.TestBean" factory-method="makeBean">
    <constructor-arg value="Hello"/>
  </bean>

  <bean id="simpleBean6" class="org.springframework.osgi.blueprint.reflect.adapters.TestBean" factory-method="clone" factory-bean="simpleBean5"/>

  <bean id="simpleBean7" class="org.springframework.osgi.blueprint.reflect.adapters.TestBean" factory-method="clone" factory-bean="simpleBean5">
    <constructor-arg value="Hello"/>
  </bean>
  
  <!-- attributes for the bean element -->
  
  <bean id="attrBean1" class="org.springframework.osgi.blueprint.reflect.adapters.TestBean"
  	depends-on="simpleBean1, simpleBean2"
  	destroy-method="onDestroy"
  	init-method="onInit"
  	lazy-init="true"
  	scope="prototype"
  />
 
 <!-- simple nested properties -->
 
 <bean id="propBean1" class="org.springframework.osgi.blueprint.reflect.adapters.TestBean">
 	<property name="name" value="MyName"/>
 	<property name="age" value="17"/>
 	<property name="testBean" ref="simpleBean1"/>
 	<property name="testBean2">
 		<bean class="org.springframework.osgi.blueprint.reflect.adapters.TestBean"/>
 	</property>
 	<property name="beanId">
 		<idref bean="simpleBean1"/>
 	</property>
 	<property name="list">
 		<list>
 			<value>1</value>
 			<value>2</value>
 		</list>
 	</property>
 	<property name="set">
 		<set>
 			<value>1</value>
 			<value>2</value> 		
 		</set>
 	</property>
 	<property name="map">
 		<map>
 			<entry key="foo" value="bar"/>
 			<entry key="bar" value="foo"/>
 		</map>
 	</property>
 	<property name="null">	
 		<null/>
 	</property>
 	<property name="props">
 		<props>
 			<prop key="foo">bar</prop>
 			<prop key="bar">foo</prop>
 		</props>
 	</property>
 	
 </bean>
  
</beans>