<?xml version="1.0" encoding="UTF-8"?>
<bp:components xmlns="http://www.osgi.org/xmlns/blueprint-compendium/v1.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:bp="http://www.osgi.org/xmlns/blueprint/v1.0.0"
	xsi:schemaLocation="
		http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
		http://www.osgi.org/xmlns/blueprint-compendium/v1.0.0 http://www.osgi.org/xmlns/blueprint-compendium/v1.0.0/blueprint-compendium.xsd">

	<cm-properties id="named" persistent-id="foo.bar" />

	<cm-properties id="noLocalOverride" persistent-id="noLocalOverride"/>
	<!-- 
		<prop key="foo">bar</prop>
		<prop key="kry">pton</prop>
	</cm-properties>
		 -->

	<cm-properties id="localOverride" persistent-id="localOverride"/>
	<!-- 
		local-override="true">
		<prop key="foo">bar</prop>
		<prop key="kry">pton</prop>
	</cm-properties>
    -->
    
	<bp:component id="props" class="java.util.Properties" />

	<!-- simple -->
	<managed-service-factory id="simple"
		factory-pid="my.pid" interface="java.lang.Object" auto-export="all-classes">
		<bp:component class="java.lang.Object" />
	</managed-service-factory>

	<!-- ccl specified -->
	<managed-service-factory id="ccl" factory-pid="my.pid">
		<interfaces>
			<value>java.util.Map</value>
			<value>java.io.Serializable</value>
		</interfaces>
		<bp:component class="java.util.HashMap" />
	</managed-service-factory>

	<!-- update strategy specified -->
	<managed-service-factory id="container-update"
		factory-pid="my.pid" update-strategy="container-managed" auto-export="all-classes">
		<bp:component class="java.lang.Object" />
	</managed-service-factory>

	<managed-service-factory id="bp:component-update"
		factory-pid="my.pid" update-strategy="bp:component-managed"
		update-method="update" auto-export="all-classes">
		<bp:component class="java.lang.Object" />
	</managed-service-factory>

	<bp:component class="org.springframework.osgi.compendium.OneSetter">
		<managed-properties persistent-id="non-name" />
	</bp:component>

	<bp:component id="simpleWUpdate" class="org.springframework.osgi.compendium.OneSetter">
		<managed-properties persistent-id="simple"
			update-strategy="container-managed" />
	</bp:component>

	<bp:component id="multipleWUpdate"
		class="org.springframework.osgi.compendium.MultipleSetters">
		<managed-properties persistent-id="multiple"
			update-strategy="container-managed" />
		<property name="integer" value="23" />
	</bp:component>

	<bp:component id="bp:componentManaged"
		class="org.springframework.osgi.compendium.BeanManaged">
		<managed-properties persistent-id="bp:component-managed"
			update-strategy="bp:component-managed" update-method="update" />
		<property name="integer" value="23" />
	</bp:component>
</bp:components>