<?xml version="1.0" encoding="UTF-8"?>

<components xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

	<description>Importer configuration</description>

	<component id="listener"
		class="org.springframework.osgi.blueprint.ImporterListener" />

	<reference id="simple" interface="java.lang.Cloneable" />

	<reference id="options" interface="java.io.Serializable"
		availability="optional" component-name="foo" filter="(name=foo)">
		<listener bind-method="bind" unbind-method="unbind" ref="listener"/>
	</reference>

	<reference id="multipleInterfaces">
		<interfaces>
			<value>java.lang.Cloneable</value>
			<value>java.io.Serializable</value>
		</interfaces>
	</reference>

</components>