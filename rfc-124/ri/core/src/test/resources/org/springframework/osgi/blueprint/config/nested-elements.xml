<?xml version="1.0" encoding="UTF-8"?>
<components xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd"
	default-init-method="init">

	<description>Components mixed subelements</description>

	<component id="classname" class="java.lang.String">
		<constructor-arg value="java.io.Serializable" />
	</component>

	<component id="class" factory-method="forName"
		class="java.lang.Class">
		<constructor-arg value="java.lang.Cloneable" />
	</component>

	<reference id="foo">
		<interfaces>
			<ref component="classname" />
			<ref component="class" />
		</interfaces>
	</reference>
	
	<reference id="bar">
		<interfaces>
			<ref component="classname" />
			<ref component="class" />
		</interfaces>
	</reference>
	

</components>