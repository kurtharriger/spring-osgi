<?xml version="1.0" encoding="UTF-8"?>
<components xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd"
		default-init-method="init">

	<description>Components just with attributes</description>

	<component id="simple" class="java.lang.Object"/>
	
	<component id="depends-on" class="java.lang.Object" depends-on="simple"/>
	
	<component id="destroy-method" class="java.util.Properties" destroy-method="clear"/>

	<component id="lazy-init" class="java.lang.Object" lazy-init="true"/>
	
	<component id="factory-method" class="java.lang.System" factory-method="currentTimeMillis"/>
	
	<component id="thread" class="java.lang.Thread"/>
	
	<component id="factory-component" factory-component="thread" factory-method="getName"/>
	
</components>