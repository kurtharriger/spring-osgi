<?xml version="1.0"?>
<project>
  <parent>
    <artifactId>petclinic</artifactId>
    <groupId>org.springframework.osgi.samples</groupId>
    <version>1.0-m3</version>
  </parent>
  
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.springframework.osgi.samples.petclinic</groupId>
  <artifactId>jdbc</artifactId>
  <packaging>jar</packaging>
  <name>Spring OSGi Petclinic Jdbc Impl</name>
  <version>1.0-m3</version>
  <url>http://www.springframework.org/osgi</url>
  
  <properties>
     <spring.osgi.version>2.1-m4</spring.osgi.version>
  </properties>
  
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.2</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.springframework</groupId>
      <artifactId>spring-tx</artifactId>
      <version>${spring.osgi.version}</version>
      <scope>provided</scope>      
    </dependency>
    <dependency>
      <groupId>org.springframework</groupId>
      <artifactId>spring-core</artifactId>
      <version>${spring.osgi.version}</version>
      <scope>provided</scope>      
    </dependency>
    <dependency>
      <groupId>org.springframework</groupId>
      <artifactId>spring-beans</artifactId>
      <version>${spring.osgi.version}</version>
      <scope>provided</scope>      
    </dependency>
    <dependency>
      <groupId>org.springframework</groupId>
      <artifactId>spring-jdbc</artifactId>
      <version>${spring.osgi.version}</version>
      <scope>provided</scope>      
    </dependency>
    <dependency>
      <groupId>org.springframework.osgi.samples.petclinic</groupId>
      <artifactId>contract</artifactId>
      <version>${pom.version}</version>
      <scope>provided</scope>      
    </dependency>
    
  </dependencies>


   <build> 
	<plugins>
	<plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <configuration>
          <archive>
            <manifestFile>META-INF/MANIFEST.MF</manifestFile>
          </archive>
        </configuration>
      </plugin>
	</plugins>
	</build>

  <repositories>
    <repository>
    <id>i21-s3-maven-repo</id>
      <name>i21 S3 milestone repo</name>
      <url>http://s3.amazonaws.com/maven.springframework.org/milestone</url>
    </repository>	
 </repositories>    
</project>