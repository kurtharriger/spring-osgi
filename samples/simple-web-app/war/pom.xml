<?xml version="1.0" encoding="UTF-8"?>
<project>
  <parent>
    <artifactId>simple-web-app</artifactId>
    <groupId>org.springframework.osgi.samples.simple-web-app</groupId>
    <version>2.0.0-m1-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.springframework.osgi.samples.simple-web-app</groupId>
  <artifactId>war</artifactId>
  <name>Spring OSGi Samples: SimpleWebApp - War Bundle</name>
  <url>http://www.springframework.org/osgi</url>
  <packaging>war</packaging>

  <build>
    <resources>
		 <resource>
		   <directory>src/main/resources</directory>
		   <excludes>
		     <exclude>META-INF/*</exclude>
		   </excludes>
		 </resource>
		 <resource>
		   <directory>src/main/java</directory>
		 </resource>
    </resources>
    
	<plugins>
	  <plugin>
         <groupId>org.apache.maven.plugins</groupId>
         <artifactId>maven-war-plugin</artifactId>
		 <configuration>
		   <warSourceExcludes>WEB-INF/lib/*</warSourceExcludes>
		   <archive>
			 <manifestFile>src/main/resources/META-INF/MANIFEST.MF</manifestFile>
		   </archive>
		 </configuration>
	  </plugin>
	</plugins>
  </build>
  
 
  <profiles>
   <profile>
    <id>dependencies</id>
    <build>
     <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <id>copy-dependencies</id>
            <phase>package</phase>
            <goals>
              <goal>copy-dependencies</goal>
            </goals>
            <configuration>
              <outputDirectory>libs</outputDirectory>
              <excludeTransitive>false</excludeTransitive>
              <stripVersion>true</stripVersion>
              <!--
              <excludeArtifactIds>org.eclipse.osgi</excludeArtifactIds>
              -->
            </configuration>
          </execution>
        </executions>
      </plugin>
     </plugins>
    </build>
   </profile>    
  </profiles>
  
</project>
