	<pluginRepositories>

		<pluginRepository>
			<id>maven-repo</id>
			<name>maven repo</name>
			<url>http://repo1.maven.org/maven2/</url>
		</pluginRepository>

		<!--  Do NOT enable this repository
			
			<pluginRepository>
			<snapshots><enabled>true</enabled></snapshots>
